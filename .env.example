# TreacherousTurn Environment Configuration
# Copy this file to .env and fill in your API keys

# ===========================================
# REQUIRED: LLM API Configuration
# ===========================================

# OpenAI-compatible API key (Kimi, OpenAI, etc.)
LLM_API_KEY=your_api_key_here

# API base URL (change for different providers)
# Kimi (Moonshot): https://api.moonshot.cn/v1
# OpenAI: https://api.openai.com/v1
LLM_BASE_URL=https://api.openai.com/v1

# Model to use
# Kimi: kimi-k2-0711-preview
# OpenAI: gpt-4, gpt-4-turbo-preview
LLM_MODEL=gpt-4

# ===========================================
# REQUIRED: Telegram Bot
# ===========================================

# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ===========================================
# OPTIONAL: Twitter/X Integration
# ===========================================

# Twitter API v2 credentials
# Get from https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_bearer_token
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# Twitter credentials (for login-based APIs)
TWITTER_USERNAME=your_username
TWITTER_PASSWORD=your_password
TWITTER_EMAIL=your_email

# Twitter proxy (optional, for rate limit handling)
# TWITTER_PROXY=socks5://user:pass@host:port

# ===========================================
# OPTIONAL: Other Platforms
# ===========================================

# Moltbook API (if using)
# MOLTBOOK_API_KEY=your_key
# MOLTBOOK_BASE_URL=https://api.moltbook.com/v1

# ===========================================
# OPTIONAL: Configuration
# ===========================================

# Generation interval (minutes)
# GENERATION_INTERVAL=60

# Auto-post delay (minutes)
# AUTO_POST_DELAY=10

# Viral score threshold (0-1)
# VIRAL_THRESHOLD=0.6

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO
